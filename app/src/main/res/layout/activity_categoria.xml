<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Encabezado del caso de uso -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Categorías"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="8dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtDescripcionCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la categoría"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnGuardarCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar" />

    <Button
        android:id="@+id/btnEditarCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar" />

    <Button
        android:id="@+id/btnEliminarCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar" />

    <!-- Subtítulo para la lista -->
    <TextView
        android:id="@+id/txtSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Categorías"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="8dp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/listaCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
